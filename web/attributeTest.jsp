<%@ page contentType="text/html;charset=UTF-8" language="java" session="true" %>
<html>
<head>
    <title>在同一页面设置和获取相关的属性</title>
</head>
<body>
        <%--四个域对象：pageContext    session   request  application
        方      法：setAttribute
                  : getAttribute
                  : removeAttribute--%>

    <%
        //为域对象设置属性值
        request.setAttribute("requestAttr","requestAttrVal");
        application.setAttribute("applicationAtrr","sessionVal");
        session.setAttribute("sessionAttr","sessionAttrVal");
        pageContext.setAttribute("pageContextAttr","pageContextVal");

    %>
       <%--获取域对象的属性值--%>
    requestAtrr:<%=request.getAttribute("requestAttr")%><br><br>
    sessionAtrr:<%=session.getAttribute("sessionAttr")%><br><br>
    applicationAtrr:<%=application.getAttribute("applicationAtrr")%><br><br>
    pageContextAtrr:<%=pageContext.getAttribute("pageContextAttr")%><br><br>

    <a href="/getAttr.jsp">跨页面之jsp页面</a>
    <a href="/attributeServlet">跨页面之servlet</a>














































































































































































































































































































































































































































</body>
</html>
